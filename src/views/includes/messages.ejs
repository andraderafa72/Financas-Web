
<% if (erros.length > 0) { %>
  <div class="row">
    <div class="col">
      <div class="alert alert-danger">
        <% erros.forEach(erro => { %>
          <%= erro %><br>
       <% }); %>
      </div>
    </div>
  </div>
  <% } %>

  <% if (success.length>0) { %>
    <div class="row">
        <div class="col">
            <div class="alert alert-success">
            <% success.forEach(s => { %>
                <%= s %><br>
                <% }); %>
            </div>
        </div>
    </div>
    <% } %>